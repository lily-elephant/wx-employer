page{
  background: #f9f9f9;
}
.swiper-wrapper {
  height: 420rpx;
}

.slide-image {
  display: block;
  margin: 0 auto;
  width: 100%;
  height: 420rpx;
}

.swiper-wrapper .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}

.swiper-wrapper .wx-swiper-dot {
  border-radius: 0;
  width: 56rpx;
  display: inline-flex;
  height: 6rpx;
  margin-left: 10rpx;
  justify-content: space-between;
}

.swiper-wrapper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
}
.btn-wrapper{
  padding: 40rpx 0 20rpx;
}
.radius{
  border-radius: 50rpx;
}
.item{
  position: relative;
  padding: 28rpx 40rpx 28rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  background: #fff;
  height: 200rpx;
}
.item-link{
  padding-bottom:32rpx;
  display: flex;
}
.item-img{
  flex: 0 0 106rpx;
  width: 106rpx;
  margin-top: 10rpx;
  height: 106rpx;
}
.item-main{
  padding: 0 0 0 28rpx;
}
.item-info{
  display: table;
  line-height: 1;
  margin-top: 10rpx;
  font-size: 0;
}
.item-name{
  display: table-cell;
  vertical-align: bottom;
  padding-right: 18rpx;
  font-size: 30rpx;
}
.item-other{
  display: table-cell;
  vertical-align: bottom;
  font-size: 24rpx;
}
.item-desc{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 32rpx;
  height: 64rpx;
  width: 81%;
  font-size: 24rpx;
  text-align: justify;
  overflow: hidden; 
  margin-top: 18rpx;
}
.thumbs-up{
  position: absolute;
  right: 60rpx;
  bottom: 60rpx;
  z-index: 2;
  line-height: 1;
  font-size: 30rpx;
}
.thumbs-up .icon-zan{
  color: #ccc;
}
.thumbs-up .zan{
  font-weight: 600;
  color: #c3b798;
}
.nodata-tips{
  display: block;
  padding: 120rpx 80rpx;
  line-height: 1.5;
}
.edit-wrapper{
  position: fixed;
  bottom: 50rpx;
  right: 60rpx;
  z-index: 4;
  line-height: 80rpx;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  border-radius: 50%;
  background: rgba(195, 183, 152, 1);
  color: #fff;
}
.edit-wrapper .icon-edit{
  font-size: 42rpx;
}