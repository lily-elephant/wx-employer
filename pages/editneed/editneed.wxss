/* pages/basetest/basetest.wxss */
.container{
  padding: 0 80rpx 0 32rpx;
}
.question{
  display: block;
  padding: 30rpx 0 0;
}
.radio-group{
  padding-left: 30rpx;
}
.radio-label{
  position: relative;
  display: block;
  padding: 30rpx 0;
  line-height: 42rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #d9d9d9;
}
.radio-label .wx-radio-input,.radio-label .wx-checkbox-input{
  display: block;
  width: 30rpx;
  height: 30rpx;
  box-sizing: border-box;
  /* opacity: 0; */
}
.radio-label .wx-radio-input-checked,.radio-label .wx-checkbox-input-checked{
  background: #c3b798!important;
  border-color: #c3b798!important;
  opacity: 1;
}
.radio-label .wx-checkbox-input.wx-checkbox-input-checked::before{
  color: #fff;
}
.radio-btn{
  position: absolute;
  right: 0;
  bottom: 26rpx;
}
.btn-wrapper{
  padding: 40rpx 0;
}
