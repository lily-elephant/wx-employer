.infoForm{
  display: block;
  padding: 20rpx 30rpx;
}
.infoForm .section{
  padding: 10rpx 0;
}
.section__title{
  float: left;
  width: 7em;
  min-height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  color: #666;
}
.inp-wrapper{
  width: calc(100% - 7em);
  height: 60rpx;
  line-height: 60rpx;
  float: right; 
  overflow: visible;
  border: 1rpx solid #ddd;
  padding: 0 8rpx;
  color: #999;
  box-sizing: border-box;
}
.inputTxt{
  width: 100%;
  height: 58rpx;
}
.btn-area{
  width: 100%;
}
.formSubmit{
  display: inline-block;
  width:280rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size:36rpx !important;
  color:#fff;
  box-shadow:0 0 5px #c3b798;
  margin-top: 60rpx;
}
.formReset{
  width:280rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size:36rpx !important;
  color:#fff;
  box-shadow:0 0 5px #c3b798;
  float: right;
  margin-top: 60rpx;
}
.self-estimate{
  width: calc(100% - 7em);
  min-height: 200rpx;
  float: right; 
  overflow: visible;
  border: 1rpx solid #ddd;
  padding: 0 8rpx;
  color: #999;
  line-height: 1.5;
  box-sizing: border-box;
}
.pickerSex{
  position: relative;
  width: calc(100% - 7em);
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  overflow: visible;
  border: 1rpx solid #ddd;
  color: #999;
  box-sizing: border-box;
  padding: 0 8rpx;
}
.pickerSex .picker{
  color:#999;
  width: 100%;
}
.icon-arrow-down{
  position: absolute;
  right: 10rpx;
  top: 0;
  line-height: 60rpx;
  color: #ccc;
  font-size: 28rpx;
}