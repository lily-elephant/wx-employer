@import "../../app.wxss";

.item-link{
  display: flex;
  flex-direction: row;
}
.item-img{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border:1px solid #eee;
}
.item-main{
  padding: 0 0 0 28rpx;
  width: calc(100% - 230rpx - 2px)
}
.item-info{
  display: table;
  line-height: 1;
  margin-top: 10rpx;
  font-size: 0;
}
.item-name{
  display: table-cell;
  vertical-align: bottom;
  padding-right: 18rpx;
  font-size: 30rpx;
}
.item-other{
  display: table-cell;
  vertical-align: bottom;
  font-size: 24rpx;
}
.item-desc{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 32rpx;
  height: 64rpx;
  font-size: 24rpx;
  text-align: justify;
  overflow: hidden; 
  margin-top: 18rpx;
}
.thumbs-up{
  position: absolute;
  right: 40rpx;
  bottom: 24rpx;
  z-index: 2;
  line-height: 1;
  font-size: 30rpx;
}
.thumbs-up .icon-zan{
  color: #ccc;
}
.thumbs-up .zan{
  font-weight: 600;
  color: #c3b798;
}